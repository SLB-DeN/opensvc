#!/bin/bash

PATH_SCRIPT="$(cd $(/usr/bin/dirname $(type -p -- $0 || echo $0));pwd)"
. $PATH_SCRIPT/make.lib

prepare_chroot || exit 1

SPEC_D=$OSVC/tmp/SPECS
SPEC=$SPEC_D/opensvc.spec

[ ! -d $SPEC_D ] && {
	mkdir -p $SPEC_D || exit 1
}

CHANGELOG=$(changelog)

cat - <<-EOF >$SPEC
Summary: $SUMMARY
Name: opensvc
URL: http://www.opensvc.com
Version: $VERSION
Release: $RELEASE
License: GPLv2
Group: Administration/Tools
BuildRoot: $CHROOT
Provides: /usr/bin/nodemgr
Provides: /usr/bin/svcmgr
Provides: /usr/bin/svcmon
AutoReqProv: no
%define _source_filedigest_algorithm 1
%define _binary_filedigest_algorithm 1
%define _source_payload w9.gzdio
%define _binary_payload w9.gzdio

%description
$DESCRIPTION

%post
/usr/bin/python %{_libdir}/opensvc/bin/postinstall

%files
%docdir %{_docdir}/opensvc
%defattr(0644,root,root,0755)
%{_docdir}/opensvc
%config(noreplace) %{_sysconfdir}/opensvc
%config(noreplace) %{_sysconfdir}/bash_completion.d
%{_localstatedir}/log/opensvc
%{_libdir}/opensvc/lib
%attr(0755,-,-) %{_localstatedir}/lib/opensvc/compliance/com.opensvc
%attr(0755,-,-) %{_libdir}/opensvc/bin/init/opensvc.init.AIX
%attr(0755,-,-) %{_libdir}/opensvc/bin/init/opensvc.init.Darwin
%attr(0755,-,-) %{_libdir}/opensvc/bin/init/opensvc.init.debian
%attr(0755,-,-) %{_libdir}/opensvc/bin/init/opensvc.init.FreeBSD
%attr(0755,-,-) %{_libdir}/opensvc/bin/init/opensvc.init.hpux
%attr(0755,-,-) %{_libdir}/opensvc/bin/init/opensvc.init.OSF1
%attr(0755,-,-) %{_libdir}/opensvc/bin/init/opensvc.init.redhat
%attr(0755,-,-) %{_libdir}/opensvc/bin/init/opensvc.init.SunOS
%attr(0755,-,-) %{_libdir}/opensvc/bin/init/opensvc.init.suse
%{_libdir}/opensvc/bin/init/darwin.com.opensvc.svcmgr.plist
%{_libdir}/opensvc/bin/init/systemd.opensvc-agent.service
%{_libdir}/opensvc/bin/init/opensvc.agent.xml
%{_libdir}/opensvc/bin/nodemgr
%{_libdir}/opensvc/bin/svcmgr
%{_libdir}/opensvc/bin/svcmon
%attr(0755,-,-) %{_libdir}/opensvc/bin/opensvc
%attr(0755,-,-) %{_libdir}/opensvc/bin/postinstall
%{_bindir}/nodemgr
%{_bindir}/svcmgr
%{_bindir}/svcmon

%changelog
$CHANGELOG

EOF

cat $SPEC
sudo rpmbuild --target=noarch --define "_topdir $OSVC/tmp" --clean -bb $SPEC
rpmlint $OSVC/tmp/RPMS/noarch/opensvc-$VERSION-$RELEASE.noarch.rpm

[ -x $PATH_SCRIPT/release_rpm ] && $PATH_SCRIPT/release_rpm $OSVC/tmp/RPMS/noarch/opensvc-$VERSION-$RELEASE.noarch.rpm
