#!/bin/bash

# apt install python-nose-json python-nosehtmloutput python-nose-cov
# apt install python3-nose-json python3-nosehtmloutput python3-nose-cov

PATH_SCRIPT="$(cd $(/usr/bin/dirname $(which -- $0 || echo $0));pwd)"
PYTHONPATH=$PATH_SCRIPT/../../lib
export PYTHONPATH

(
	cd $PATH_SCRIPT/../..
	nosetests \
		--verbosity=2 \
		--with-coverage \
		--cover-html \
		--cover-html-dir=$PATH_SCRIPT/../../tmp/cover \
		--with-html-output \
		--html-out-file=$PATH_SCRIPT/../../tmp/xunit.html \
		--cover-package=.. \
		--with-json \
		--json-file=$PATH_SCRIPT/../../tmp/xunit.json \
		lib/tests/
)

