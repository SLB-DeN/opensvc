[Unit]
Description=OpenSVC agent
Documentation=http://docs.opensvc.com/ file:/usr/share/doc/opensvc/ man:nodemgr(1) man:svcmgr(1) man:svcmon(1)
Wants=network-online.target
Wants=time-sync.target
Wants=multi-user.target
Before=opensvc-services.service
After=network.target
After=dockerd.service
After=libvirtd.service
After=virt-guest-shutdown.target
After=libvirt-guests.service
After=multipathd.service
After=iscsi.service
After=iscsi-shutdown.service
After=blk-availability.service
Wants=libvirtd.service
Wants=libvirt-guests.service
Wants=multipathd.service
Wants=iscsi.service
Wants=iscsi-shutdown.service
Wants=blk-availability.service
Requires=opensvc-services.service

[Service]
Type=forking
TimeoutStopSec=5m
ExecStart=/usr/share/opensvc/bin/nodemgr daemon start
ExecStop=/usr/share/opensvc/bin/nodemgr daemon stop
KillMode=process
Restart=on-failure
OOMScoreAdjust=-1000

[Install]
WantedBy=multi-user.target
