#!/bin/sh
#

# PROVIDE: opensvc
# REQUIRE: LOGIN sshd cleanvar
# BEFORE: 
# KEYWORD: shutdown

osvc_path=/opt/opensvc/bin
osvc_opts="--parallel"
allsecondaryservices=${osvc_path}/allservices
allprimaryservices=${osvc_path}/allprimaryservices

case $1 in
start)
	${allprimaryservices} ${osvc_opts} start
	${allsecondaryservices} ${osvc_opts} startstandby
	;;
stop)
	${allsecondaryservices} ${osvc_opts} --force stop
	;;
esac
