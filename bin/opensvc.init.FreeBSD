#!/bin/sh
#

# PROVIDE: opensvc
# REQUIRE: LOGIN sshd cleanvar
# BEFORE: 
# KEYWORD: shutdown

osvc_path=/opt/opensvc/bin
osvc_opts="--parallel"
allservices=${osvc_path}/allservices

case $1 in
faststart)
        ${osvc_path}/nodemgr pushasset
	${allservices} ${osvc_opts} boot
	;;
faststop)
	${allservices} ${osvc_opts} shutdown
	;;
esac
