#!/bin/sh
#

# PROVIDE: opensvc
# REQUIRE: LOGIN sshd cleanvar
# BEFORE: 
# KEYWORD: shutdown

osvc_path=/opt/opensvc/bin
allservices=${osvc_path}/allservices
allprimaryservices=${osvc_path}/allprimaryservices

case $1 in
start)
	${allprimaryservices} start
	${allservices} startstandby
	;;
stop)
	${allservices} stop
	;;
esac
